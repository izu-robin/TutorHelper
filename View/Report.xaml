<UserControl x:Class="TutorHelper.View.Groups"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:TutorHelper.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:ReportVM />
    </UserControl.DataContext>

    <Grid Margin="15">

        <Border CornerRadius="0,20,20,0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/imgGroups.png"
                            Stretch="Fill" />
            </Border.Background>
        </Border>

        <TextBlock Text="Доступные отчеты: "
           FontSize="20"
           HorizontalAlignment="Left"
           VerticalAlignment="Top" 
           Margin="15,15,0,0" 
           Width="254" 
           Foreground="White" 
           FontWeight="Bold" />

        <Grid Margin="15,54,15,15">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Grid Height="155" 
                      Grid.Row="0"
                      VerticalAlignment="Top"
                      Margin="0,0,0,10">

                <StackPanel>
                    <Border Grid.Column="0"
                            Height="152"
                            Width="562"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Padding="5,5,0,0"
                            BorderBrush="#A5CCE4"
                            BorderThickness="2" 
                            Margin="0,0,0,0"
                            CornerRadius="0,15,20,20">

                        <StackPanel>
                            <StackPanel Orientation="Horizontal" >

                                <Label Content="Показать отчет за: "
                                   FontSize="16"
                                   Foreground="White" 
                                   VerticalAlignment="Top"
                                   Height="30"
                                   FontWeight="Bold"/>

                                <ComboBox ItemsSource="{Binding Months}"
                                          SelectedItem="{Binding SelectedMonth, Mode=TwoWay}"
                                          DisplayMemberPath="Name"
                                          SelectedValuePath="Id"
                                          Width="100"
                                          Height="20"
                                          VerticalAlignment="Top"
                                          Margin="7"/>

                                <ComboBox ItemsSource="{Binding Years}"
                                          SelectedItem="{Binding SelectedYear}"
                                          Width="100"
                                          Height="20"
                                          VerticalAlignment="Top"
                                          Margin="7" />

                                <Button   Content="Найти/Создать"
                                          Command="{Binding GetReportCommand}"
                                      Width="151"
                                      Height="20"
                                      VerticalAlignment="Top"
                                      Margin="7" 
                                      Background="#A5CCE4"/>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal">

                                <Border Height="90"
                                    Width="168"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Padding="5,5,0,5"
                                    BorderBrush="#A5CCE4"
                                    BorderThickness="2" 
                                    Margin="4,10,5,8"
                                        CornerRadius="0,0,0,15">

                                    <StackPanel>

                                        <Label Content="Проведено занятий: "
                                           HorizontalAlignment="Center"
                                           FontSize="16"
                                           Foreground="White" 
                                           VerticalAlignment="Top"
                                           Height="30"/>

                                        <TextBlock Text="{Binding CurrentReport.TotalLessons}"
                                                   FontSize="18"
                                                   Foreground="White" 
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Center"
                                                   Margin="10"/>

                                    </StackPanel>

                                </Border>


                                <Border Height="90"
                                        Width="168"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Padding="5,5,0,5"
                                        BorderBrush="#A5CCE4"
                                        BorderThickness="2" 
                                        Margin="13,10,10,8"
                                        >

                                    <StackPanel>

                                        <Label Content="Из них оплачено: "
                                               HorizontalAlignment="Center"
                                               FontSize="16"
                                               Foreground="White" 
                                               VerticalAlignment="Top"
                                               Height="30"/>

                                        <TextBlock Text="{Binding CurrentReport.PaidLessons}"
                                                   FontSize="18"
                                                   Foreground="White" 
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Center"
                                                   Margin="10"/>

                                    </StackPanel>

                                </Border>

                                <Border Height="90"
                                        Width="169"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Padding="5,5,0,5"
                                        BorderBrush="#A5CCE4"
                                        BorderThickness="2" 
                                        Margin="6,10,10,8"
                                        CornerRadius="0,0,15,0">

                                    <StackPanel>

                                        <Label Content="Общая сумма: "
                                               HorizontalAlignment="Center"
                                               FontSize="16"
                                               Foreground="White" 
                                               VerticalAlignment="Top"
                                               Height="30"/>

                                        <TextBlock Text="{Binding CurrentReport.TotalSum}"
                                                   FontSize="18"
                                                   Foreground="White" 
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Center"
                                                   Margin="10"/>

                                    </StackPanel>

                                </Border>

                            </StackPanel>

                        </StackPanel>

                    </Border>

                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <FlowDocumentScrollViewer Height="288"
                                          VerticalAlignment="Top"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Visible"
                                          HorizontalAlignment="Left"
                                          Padding="0" Width="700">

                    <FlowDocument Name="docReport"
                                  MinPageWidth="700"
                                  PageWidth="550">

                        <BlockUIContainer>

                            <StackPanel>
                                <ListView Name="hehe"
                                          ItemsSource="{Binding LessonsList}"
                                          Height="700"
                                          VerticalAlignment="Top"
                                          Width="514"
                                          HorizontalContentAlignment="Center" >

                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Дата"
                                                            DisplayMemberBinding="{Binding Date}"
                                                            Width="80"
                                            />
                                            <GridViewColumn Header="Время" 
                                                            DisplayMemberBinding="{Binding Time}"
                                                            Width="60"
                                            />

                                            <GridViewColumn Header="Ученик" 
                                                            DisplayMemberBinding="{Binding StudentFullName}"
                                                             Width="190"
                                            />
                                            <GridViewColumn Header="Длит." 
                                                            DisplayMemberBinding="{Binding Duration}"
                                                             Width="80"
                                            />
                                            <GridViewColumn Header="Оплачено" 
                                                            DisplayMemberBinding="{Binding SignPaid}"
                                                             Width="85"
                                            />
                                        </GridView>

                                    </ListView.View>

                                </ListView>


                                <StackPanel Orientation="Horizontal"
                                            Margin="3,0,0,0">

                                    <Border Height="90"
                                         Width="165"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top"
                                         Padding="0,5"
                                         BorderBrush="#A5CCE4"
                                         BorderThickness="2" 
                                         Margin="5,10,5,8"
                                             CornerRadius="0,0,0,15">

                                        <StackPanel>

                                            <Label Content="Проведено занятий: "
                                                HorizontalAlignment="Center"
                                                FontSize="16"
                                                Foreground="Black" 
                                                VerticalAlignment="Top"
                                                Height="30"/>

                                            <TextBlock Text="{Binding CurrentReport.TotalLessons}"
                                                        FontSize="18"
                                                        Foreground="Black" 
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Center"
                                                        Margin="10"/>

                                        </StackPanel>

                                    </Border>

                                    <Border Height="90"
                                             Width="148"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top"
                                             Padding="0,5"
                                             BorderBrush="#A5CCE4"
                                             BorderThickness="2" 
                                             Margin="13,10,10,8">

                                        <StackPanel>

                                            <Label Content="Из них оплачено: "
                                                    HorizontalAlignment="Center"
                                                    FontSize="16"
                                                    Foreground="Black" 
                                                    VerticalAlignment="Top"
                                                    Height="30"/>

                                            <TextBlock Text="{Binding CurrentReport.PaidLessons}"
                                                        FontSize="18"
                                                        Foreground="Black" 
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Center"
                                                        Margin="10"/>

                                        </StackPanel>

                                    </Border>

                                    <Border Height="90"
                                             Width="148"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top"
                                             Padding="0,5"
                                             BorderBrush="#A5CCE4"
                                             BorderThickness="2" 
                                             Margin="8,10,10,8"
                                             CornerRadius="0,0,15,0">

                                        <StackPanel>

                                            <Label Content="Общая сумма: "
                                                    HorizontalAlignment="Center"
                                                    FontSize="16"
                                                    Foreground="Black" 
                                                    VerticalAlignment="Top"
                                                    Height="30"/>

                                            <TextBlock Text="{Binding CurrentReport.TotalSum}"
                                                        FontSize="18"
                                                        Foreground="Black" 
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Center"
                                                        Margin="10"/>

                                        </StackPanel>

                                    </Border>

                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">

                                    <Label Content="Отчет  за"
                                        FontSize="18"
                                        Foreground="Black"
                                           Margin="10,10,5,10"
                                           VerticalAlignment="Top"/>

                                    <TextBlock Text="{Binding SelectedMonth.Name}" 
                                               FontSize="18"
                                                Foreground="Black"
                                                Margin="0,15,5,0"
                                                
                                               VerticalAlignment="Top"
                                               />

                                    <TextBlock Text="{Binding SelectedYear}"
                                               FontSize="18"
                                               Foreground="Black"
                                               Margin="5,15,0,0"
                                               VerticalAlignment="Top"
                                              />

                                </StackPanel>

                            </StackPanel>

                        </BlockUIContainer>

                    </FlowDocument>


                </FlowDocumentScrollViewer>

                <Button Content="Распечатать/сохранить отчет в PDF"
                        Click="Button_Click"
                        Background="#A5CCE4"
                        VerticalAlignment="Top"
                        Margin="131,304,131,0"
                        Width="300"
                        Height="25" 
                        >

                </Button>

            </Grid>

        </Grid>

    </Grid>

</UserControl>
