<UserControl x:Class="TutorHelper.View.Students"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:TutorHelper.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:StudentsVM />
    </UserControl.DataContext>




    <Grid Margin="15">
        
        <Border CornerRadius="0,20,20,0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/imgStudents.png"
                            Stretch="Fill" />
            </Border.Background>

        </Border>

        <Grid Grid.Row="0">
        <TextBlock Text="Все ученики: "
                   FontSize="20"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" 
                   Margin="15,20,0,0" 
                   Width="254" 
                   Foreground="White" 
                   FontWeight="Bold" />
        </Grid>

        <Grid Margin="15,54,15,15">

            <Grid Height="200"
                  VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <ListView ItemsSource="{Binding StudentsList}"
                              SelectedItem="{Binding SelectedStudent}"
                              SelectionMode="Single"
           >
                        <ListView.View >
                            <GridView > 
                                
                                <GridViewColumn Header="Фамилия" 
                                                DisplayMemberBinding="{Binding FullName}"
                                                Width="180"/>

                                <GridViewColumn Header="УМК" 
                                                DisplayMemberBinding="{Binding TextbookTitle}"
                                                Width="145"/>


                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Border  Height="200"
                             Width="206"
                             Margin="21,0,0,0"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Top" 
                             BorderBrush="#A5CCE4"
                             BorderThickness="2"
                             Padding="10">

                        <StackPanel>
                            <TextBlock Text= "Добавить ученика:" 
                                    Foreground="White"
                                    TextWrapping="Wrap" 
                                    Width="180"
                                    FontWeight="Bold"
                                    Margin="0,0,0,0"/>

                            <TextBlock Text= "Имя" 
                                       Foreground="White"
                                       Width="180"
                                       Margin="4"/>
                            <TextBox Text="Имя" 
                                     Margin="0"/>
                            
                            <TextBlock Text= "Фамилия" 
                                       Foreground="White"
                                       Width="180"
                                       Margin="4"/>
                            <TextBox Text="Фамилия" 
                                     Margin="0"/>

                            <TextBlock Text="Тариф" 
                                       Foreground="White"
                                       Margin="4"/>
                            
                            <ComboBox Width="180"
                                      Height="20">
                                
                            </ComboBox>

                            <Button x:Name="SaveNewStudent"
                                    Content="Сохранить изменения"
                                    Margin="0,10,0,0"
                                    Background="#A5CCE4">

                            </Button>



                        </StackPanel>

                    </Border>
                    
                    


                </StackPanel>
            </Grid>

            
            <!--//  Нижняя панель вся //-->
            <Grid Margin="0,220,0,187"
                  Width="335"
                  HorizontalAlignment="Left">

                <Border HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Height="95"
                        Width="335"
                        BorderBrush="#A5CCE4"
                        BorderThickness="2"
                        Padding="10">

                    <TextBlock Text= "Найти все занятия ученика:" 
                                Foreground="White"
                                TextWrapping="Wrap" 
                                Width="180"
                                FontWeight="Bold"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Left"/>

                </Border>
                <StackPanel Orientation="Horizontal">

                    <CheckBox Content="Оплаченные"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"
                              Foreground="White"
                              FontSize="12"/>

                    <CheckBox Content="Оплаченные"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"
                              Foreground="White"
                              FontSize="12"/>

                    <CheckBox Content="Посещенные"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"
                              Foreground="White"
                              FontSize="12"/>

                </StackPanel>

                <Button Content="Найти"
                        Height="20"
                        Margin="10,60,10,10"
                        Background="#A5CCE4"/>


            </Grid>

            

            <Grid Margin=" 0,330,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!--//  Нижняя таблица //-->
                <ListView x:Name="StudentsLessonsView"
                          ItemsSource="{Binding Lessons}"
                          SelectionMode="Single">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID зан."
                                        DisplayMemberBinding="{Binding Id}"
                                        Width="42">
                            </GridViewColumn>
                            <GridViewColumn Header="Дата"
                                        DisplayMemberBinding="{Binding Id}"
                                        Width="47"/>
                            <GridViewColumn Header="Время"
                                        DisplayMemberBinding="{Binding Id}"
                                        Width="47"/>
                            <GridViewColumn Header="Группа"
                                        DisplayMemberBinding="{Binding Id}"
                                        Width="50"/>
                            <GridViewColumn Header="Присутствие"
                                        DisplayMemberBinding="{Binding Id}"
                                        Width="75"/>
                            <GridViewColumn Header="Оплачено"
                                        DisplayMemberBinding="{Binding Id}"
                                        Width="70"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>


            <!--// коробка с кнопками //-->
            <Border
                        Height="281"
                        Width="205"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom" 
                        BorderBrush="#A5CCE4"
                        BorderThickness="2"
                        Padding="10">
                <StackPanel>
                    <StackPanel>
                        
                        <TextBlock Text= "Редактировать ученика:" 
                                   Foreground="White"
                                   TextWrapping="Wrap" 
                                   Width="180"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text= "Имя" 
                                   Foreground="White"
                                   Width="180"
                                   Margin="5,8"/>
                        <TextBox Text="{Binding CurrentEditableStudent.Name, Mode=TwoWay}" 
                                 Margin="0"/>
                        
                        <!--вот тут ="Binding SelectedLesson.Time, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"-->


                        <TextBlock Text= "Фамилия" 
                                   Foreground="White"
                                   Width="180"
                                   Margin="5,8"/>
                        
                        <TextBox    Text="{Binding CurrentEditableStudent.Surname}" 
                                    Margin="0"/>

                        <TextBlock Text= "Тариф"
                                   TextWrapping="Wrap"
                                   Foreground="White"
                                   Width="180"
                                   Margin="5,8"/>
                        <ComboBox ItemsSource="{Binding RatesList}"
                                  SelectedItem="{Binding SelectedRating}"
                                  DisplayMemberPath="Title"
                                  SelectedValuePath="Id"
                                  Height="20"/>

                        <!--<TextBlock Text= "УМК"
                                   TextWrapping="Wrap"
                                   Foreground="White"
                                   Width="180"
                                   Margin="5"/>
                        <ComboBox x:Name="textbook"
                                  Height="20"
                                  SelectedItem="0"/>-->


                        <Button Command="{Binding SaveEditedStudent}"
                                Content="Сохранить изменения"
                                Margin="0,15,0,0"
                                Background="#A5CCE4">

                        </Button>
                        
                    </StackPanel>



                     

                     


                    

                    
                    


                    <!--<Button x:Name="ShowAttended"
                            Content="Показать посещенные"
                            Margin="5,10,5,3"
                            Background="#A5CCE4">

                    </Button>-->

                </StackPanel>
                
            </Border>

        </Grid>


        <!--<TextBlock Text="Номер ученика  :"
                   Foreground="#DBDBDB"
                   FontSize="12"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="70,138,0,0" />

        <TextBlock Text="{Binding CustomerID}"
                   Foreground="#DBDBDB"
                   FontSize="12"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="160,138,0,0" />-->

    </Grid>

</UserControl>
