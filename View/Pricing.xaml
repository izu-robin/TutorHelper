<UserControl x:Class="TutorHelper.View.Pricing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:TutorHelper.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:PricingVM />
    </UserControl.DataContext>
    
    <Grid Margin="15">

        <Border CornerRadius="0,20,20,0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/imgPricing.png"
                            Stretch="Fill" />
            </Border.Background>
        </Border>

        <TextBlock Text="Тарифы: "
           FontSize="20"
           HorizontalAlignment="Left"
           VerticalAlignment="Top" 
           Margin="15,15,0,0" 
           Width="254" 
           Foreground="White" 
           FontWeight="Bold" />
        
        
        
        
        
        <Grid Margin="15,54,15,15">

            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <Grid Height="200" 
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Margin="0,0,0,10">

                <ListView ItemsSource="{Binding GroupsList}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" 
                                            DisplayMemberBinding="{Binding Id}"
                                            Width="70"/>
                            <GridViewColumn Header="Название тарифа" 
                                            DisplayMemberBinding="{Binding Name}"
                                            Width="280"/>

                            <GridViewColumn Header="Стоимость 1 академического часа" 
                                            DisplayMemberBinding="{Binding группы}"
                                            Width="200"/> 
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <Grid Grid.Row="1"
                    VerticalAlignment="Top"
                    Margin="5,5,0,0"    
                    Height="160">

                <StackPanel>

                    <TextBlock Text= "Добавить/редактировать тариф:" 
                                Foreground="White"
                                TextWrapping="Wrap" 
                                Width="281"
                                FontWeight="Bold"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" >

                        <TextBlock Text= "Название: " 
                                    Foreground="White"
                                    TextWrapping="Wrap" 
                                    Width="147"
                                    FontWeight="Bold"
                                    VerticalAlignment="Center" 
                                     Margin="0,8,0,10"/>

                        <TextBox    Text="Взрослый бизнес" 
                                    Margin="0"
                                    Height="20"
                                    Width="180"
                                    HorizontalAlignment="Left"/>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" >

                        <TextBlock Text= "Стоимость ак. часа: " 
                                    Foreground="White"
                                    TextWrapping="Wrap" 
                                    Width="147"
                                    FontWeight="Bold"
                                    VerticalAlignment="Center" 
                                    Margin="0,8,0,10"/>

                        <TextBox    Text="700" 
                                    Margin="0"
                                    Height="20"
                                    Width="180"
                                    HorizontalAlignment="Left"/>

                    </StackPanel>

                    <Button x:Name="SaveTextbook"
                            Content="Сохранить тариф"
                            Width="328"
                            Height="20"
                            Margin="0,15,0,0"
                            HorizontalAlignment="Left"
                            Background="#A5CCE4"/>



                </StackPanel>







            </Grid>










        </Grid>


        <!--<Grid>

            <TextBlock Text="Стандартная стоимость академ.часа  :"
                       Foreground="#DBDBDB"
                       FontSize="12"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="0,300,150,0" />

            <TextBlock Text="{Binding TransactionAmount, StringFormat='{}{0:C}'}"
                       Foreground="White"
                       FontSize="12"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"

                       Margin="0,300,82,0" />

            --><!--FontFamily="/Fonts/#Rubik Medium" // внутри тэга выше отдельной строчкой чтобы задать шрифт--><!--

        </Grid>-->
    </Grid>
    
</UserControl>
