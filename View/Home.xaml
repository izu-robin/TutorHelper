<UserControl x:Class="TutorHelper.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:TutorHelper.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:HomeVM />
    </UserControl.DataContext>

    <Grid Margin="15">
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="453*"/>
        </Grid.ColumnDefinitions>-->

        <Border CornerRadius="0,20,20,0" Grid.ColumnSpan="2" >

            <Image Source="/Images/imgView.png"
                   Stretch="Fill" />
        </Border>

        <!--Дату конечно дорабатывать еще много и долго но пока пойдет-->
        <TextBlock Name="DateTextBlock" Text="{Binding DateToday}"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" 
                   Margin="15,15,0,0" Width="254" Foreground="White" FontWeight="Bold" Grid.ColumnSpan="2" />

        <Grid Margin="15,40,15,15" >
            <Calendar Name="HomeViewCalendar" 
                      HorizontalAlignment="Left" 
                      Margin="374,17,0,0" 
                      VerticalAlignment="Top" 
                      IsTodayHighlighted="True"
                      SelectedDate="{Binding SelectedDate, Mode=TwoWay}">
                <!--SelectedDatesChanged="NewSelectedDate"-->

                <Calendar.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA3AEB9"/>
                        <GradientStop Color="#FF8399A9" Offset="0.375"/>
                        <GradientStop Color="#FF718597" Offset="0.375"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Calendar.BorderBrush>
            </Calendar>

            <Grid Height="165"
                  Width="350"
                  VerticalAlignment="Top"
                  Margin="0,20,0,0"
                  MinWidth="350" 
                  MinHeight="162" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                  >

                <ListView Name="DatesLessonsTable" 
                          ItemsSource="{Binding DatesLessonsList}"
                          HorizontalAlignment="Center"
                          Width="350"
                          >

                    <ListView.View>

                        <GridView >

                            <GridViewColumn Header="Группа" DisplayMemberBinding="{Binding GroupID}"
                                            Width="60"
                                            >
                            </GridViewColumn>
                            <GridViewColumn Header="Время" DisplayMemberBinding="{Binding Time}"
                                            Width="70"
                                            TextBlock.TextAlignment="Center"/>
                            <GridViewColumn Header="Заметки" DisplayMemberBinding="{Binding Notes}"
                                            Width="215"
                                            />
                            <!--<GridViewColumn Header="Длит." DisplayMemberBinding="{Binding Duration}"
                                            Width="55"
                                            TextBlock.TextAlignment="Center"/>-->
                        </GridView>
                    </ListView.View>
                </ListView>


                <!--<DataGrid ItemsSource="{Binding Lessons}"  HorizontalAlignment="Left" 
                      Margin="0, 20, 0, 0" 
                      VerticalAlignment="Top" 
                      Width="350" 
                      Height="162" 
                      Grid.IsSharedSizeScope="True" 
                      MinWidth="350" 
                      MinHeight="162"
                      AutoGenerateColumns="True"
                      HeadersVisibility="None"
                      HorizontalGridLinesBrush="#549DC2"
                      VerticalGridLinesBrush="#549DC2" Grid.ColumnSpan="2"
                      >-->




            </Grid>

            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>




                <StackPanel Orientation="Horizontal"
                            Grid.Row="1" >


                    <StackPanel  
                                 Margin="5,5,0,5"
                                 Width="342"
                                 HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text= "Время:" 
                                   FontSize="14"
                                    Foreground="White"
                                    TextWrapping="Wrap" 
                                    Width="102"
                                    FontWeight="Bold"
                                    Margin="0,0,20,10"
                                    HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>

                            <TextBlock Text="12:00" 
                                 Width="130"
                                 Height="20"
                                 VerticalAlignment="Top"
                                 Foreground="White"
                                   FontSize="14"
                                   
                                 />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,0">
                            <TextBlock Text= "Дата:" 
                                   FontSize="14"
                                Foreground="White"
                                TextWrapping="Wrap" 
                                Width="102"
                                FontWeight="Bold"
                                Margin="0,0,20,10"
                                HorizontalAlignment="Left"
                                   VerticalAlignment="Top"/>
                            <TextBlock Text="2025/07/18" 
                                    Width="130"
                                    Height="20"
                                    VerticalAlignment="Top"
                                    Foreground="White"
                                    FontSize="14"
         />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"  
                                Margin="0,0,0,0">
                            <TextBlock Text= "Длительность (мин):" 
                                   FontSize="14"
                                    Foreground="White"
                                    TextWrapping="Wrap" 
                                    Width="102"
                                    FontWeight="Bold"
                                    Margin="0,0,20,10"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"/>
                            <TextBlock Text="60" 
                                    Width="130"
                                    Height="20"
                                    VerticalAlignment="Top"
                                    Foreground="White"
                                    FontSize="14"
         />

                        </StackPanel>

                        <StackPanel Orientation="Horizontal"  
                       Margin="0,0,0,0">
                            <TextBlock Text= "Состав группы:"
                                   FontSize="14"
                                    Foreground="White"
                                    TextWrapping="Wrap" 
                                    Width="102"
                                    FontWeight="Bold"
                                    Margin="0,0,20,10"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"/>
                            <TextBlock Text="Хиханькин, Хаханькин" 
                                    Width="202"
                                    VerticalAlignment="Top"
                                    Foreground="White"
                                    FontSize="14" Height="47"
                                    TextWrapping="Wrap"
/>

                        </StackPanel>

                        <StackPanel Orientation="Horizontal"  
                       Margin="0,0,0,0">
                            <TextBlock Text= "Заметки:" 
                                   FontSize="14"
                                    Foreground="White"
                                    TextWrapping="Wrap" 
                                    Width="102"
                                    FontWeight="Bold"
                                    Margin="0,0,20,10"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"/>
                            <TextBlock Text="Подготовка к тесту по модулю" 
                                    Width="202"
                                    VerticalAlignment="Top"
                                    Foreground="White"
                                    FontSize="14"   
                                    Height="58"
                                    TextWrapping="Wrap"
/>

                        </StackPanel>


                    </StackPanel>

                    <Border  Margin="25,0,0,50"
                             BorderBrush="#A5CCE4"
                             BorderThickness="2" 
                             Width="180"
                             Height="233"
                             VerticalAlignment="Top">

                        <StackPanel>
                            <TextBlock Text= "Добавить занятие:" 
                                       Foreground="White"
                                       TextWrapping="Wrap" 
                                       Width="180"
                                       FontWeight="Bold"
                                       Margin="5"/>

                            <TextBlock Text= "Дата" 
                                          Foreground="White"
                                          Width="180"
                                          Margin="5"/>
                            <TextBox Text="2025/12/31" 
                                     Width="160"
                                     Height="20"
                                     Margin="0"/>

                            <TextBlock Text= "Время" 
                                          Foreground="White"
                                          Width="180"
                                          Margin="5"/>
                            <TextBox Text="16:00" 
                                     Margin="0"
                                     Width="160"
                                     Height="20"/>

                            <TextBlock Text="Группа" 
                                          Foreground="White"
                                          Margin="5"/>

                            <ComboBox Width="160"
                                         Height="20">

                            </ComboBox>

                            <Button x:Name="SaveNewLesson"
                                       Content="Сохранить изменения"
                                       Margin="0,30,0,0"
                                    Width="160"
                                    Height="25"
                                       Background="#A5CCE4">

                            </Button>








                        </StackPanel>
                        
                        
                        
                        
                        
                    </Border>
                </StackPanel>




            </Grid>







        </Grid>


        <!--//тестовый лэйбл для проверки возвращаемой даты//-->
        <!--<Label Name="tester"
         Height="35"
         Width="180"
         Margin="380,238,21,298"
         Foreground="white"
         FontSize="20" Grid.Column="1">
            <TextBlock Text="{Binding ForTester, Mode=OneWay}" />
        </Label>-->

    </Grid>

</UserControl>
