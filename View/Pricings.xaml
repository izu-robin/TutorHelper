<UserControl x:Class="TutorHelper.View.Pricing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:TutorHelper.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:PricingVM />
    </UserControl.DataContext>
    
    <Grid Margin="15">

        <Border CornerRadius="0,20,20,0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/imgPricing.png"
                            Stretch="Fill" />
            </Border.Background>
        </Border>

        <TextBlock Text="Тарифы: "
           FontSize="20"
           HorizontalAlignment="Left"
           VerticalAlignment="Top" 
           Margin="15,15,0,0" 
           Width="254" 
           Foreground="White" 
           FontWeight="Bold" />
        
        <Grid Margin="15,54,15,15">

            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <Grid Height="200" 
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Margin="0,0,0,10">

                <ListView ItemsSource="{Binding PricingsList}"
                          SelectedItem="{Binding SelectedRating}"
                          SelectionMode="Single"
                          >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" 
                                            DisplayMemberBinding="{Binding Id}"
                                            Width="70"/>
                            <GridViewColumn Header="Название тарифа" 
                                            DisplayMemberBinding="{Binding Title}"
                                            Width="280"/>

                            <GridViewColumn Header="Стоимость занятия" 
                                            DisplayMemberBinding="{Binding Price}"
                                            Width="200"/> 
                            
                        </GridView>
                        
                    </ListView.View>
                    
                </ListView>
                
            </Grid>

            <Grid Grid.Row="1"
                  VerticalAlignment="Top"
                  Margin="0" 
                  Height="160">

                <StackPanel Orientation="Horizontal">
                    <Border Padding="5"
                            BorderBrush="#A5CCE4"
                            BorderThickness="2" 
                            Width="277" 
                            CornerRadius="0,0,0,15">
                        <StackPanel Width="270">

                            <TextBlock Text= "Редактировать тариф:" 
                                       Foreground="White"
                                       TextWrapping="Wrap" 
                                       Width="281"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" >

                                <TextBlock Text= "Название: " 
                                           Foreground="White"
                                           TextWrapping="Wrap" 
                                           Width="84"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" 
                                           Margin="0,8,10,10"/>

                                <TextBox    Text="{Binding CurrentEditableRating.Title, Mode=TwoWay}" 
                                            Margin="0"
                                            Height="20"
                                            Width="160"/>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal" >

                                <TextBlock Text= "Стоимость занятия: " 
                                           Foreground="White"
                                           TextWrapping="Wrap" 
                                           Width="85"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" 
                                           Margin="0,5,10,0"/>
                                <TextBox    Text="{Binding CurrentEditableRating.Price, Mode=TwoWay}"
                                            Height="20"
                                            Width="160"/>

                            </StackPanel>

                            <Button x:Name="SaveRedactedTextbook"
                                    Command="{Binding SaveCommand}"
                                    Content="Сохранить редактированный тариф"
                                    Width="256"
                                    Height="20"
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Left"
                                    Background="#A5CCE4"/>



                        </StackPanel>
                    </Border>

                    <Border Padding="5"
                            BorderBrush="#A5CCE4"
                            BorderThickness="2" 
                            Width="275" 
                            Margin="10,0,0,0"
                            CornerRadius="0,0,15,0">
                        <StackPanel Width="270">

                            <TextBlock Text= "Добавить тариф:" 
                                       Foreground="White"
                                       TextWrapping="Wrap" 
                                       Width="281"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" >

                                <TextBlock Text= "Название: " 
                                           Foreground="White"
                                           TextWrapping="Wrap" 
                                           Width="84"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" 
                                           Margin="0,8,10,5"/>

                                <TextBox    Text="{Binding NewRate.Title, Mode=TwoWay}" 
                                            Margin="0"
                                            Height="20"
                                            Width="160"/>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal" >

                                <TextBlock Text= "Стоимость занятия: " 
                                           Foreground="White"
                                           TextWrapping="Wrap" 
                                           Width="85"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" 
                                           Margin="0,10,10,0"/>

                                <TextBox    Text="{Binding NewRate.Price, Mode=TwoWay}" 
                                            Margin="0"
                                            Height="20"
                                            Width="160" 
                                            MaxLength="5"/>

                            </StackPanel>

                            <Button x:Name="SaveNewTextbook"
                                    Command="{Binding SaveNewRateCommand}"
                                    Content="Сохранить новый тариф"
                                    Width="256"
                                    Height="20"
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Left"
                                    Background="#A5CCE4"/>

                        </StackPanel>
                        
                    </Border>

                </StackPanel>

            </Grid>

        </Grid>

    </Grid>
    
</UserControl>
